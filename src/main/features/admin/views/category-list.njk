{% extends "layout.njk" %}

{% set title = t('Categories | Fees Register Admin Console') %}
{% set heading = t('Categories') %}

{% block content %}

<div class="column-full">
    <table>
      <thead>
        <tr>
          <th scope="col">Code</th>
          <th scope="col">Description</th>
          <th class="numeric" scope="col">Range count</th>
          <th class="numeric" scope="col">Flat fee count</th>
        </tr>
      </thead>
      <tbody>
        {% for category in categories %}
          <tr>
            <td><a href="/admin/categories/{{ category.code }}">{{ category.code }}</a></td>
            <td>{{ category.description }}</td>
            <td class="numeric">{{ category.ranges.length }}</td>
            <td class="numeric">{{ category.fees.length }}</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>

    <p><a href="/admin/welcome/" class="link-back">{{ t("Back to welcome page") }}</a></p>
</div>

{% endblock %}
