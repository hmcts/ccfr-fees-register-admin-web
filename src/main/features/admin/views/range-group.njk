{% extends "layout.njk" %}

{% set title = t('Range Group | Fees Register Admin Console') %}
{% set service = rangeGroup.code %}
{% set heading = 'Range group for: ' + service %}

{% block content %}

  <div class="column-full">
    <table>
          <thead>
            <tr>
              <th>Service</th>
              <th>Fee code</th>
              <th>Fee description</th>
              <th>Range from</th>
              <th>Range to</th>
              <th>Fee</th>
            </tr>
          </thead>
          <tbody>
              {% for range in rangeGroup.ranges %}
                <tr>
                  <td>{{ rangeGroup.code }}</td>
                  <td>{{ range.fee.code }}</td>
                  <td>{{ range.fee.description }}</td>
                  <td>{{ range.from }}</td>
                  <td>{{ range.to }}</td>
                  {% if range.fee.amount > -1 %}
                    <td>{{ range.fee.amount }}</td>
                  {% else %}
                    <td>{{ range.fee.percentage }}%</td>
                  {% endif %}

                </tr>
              {% endfor %}
          </tbody>
    </table>

    <p><a href="/admin/welcome/" class="link-back">{{ t("Back to welcome page") }}</a></p>
  </div>

{% endblock %}
