{
  "name": "fees-register-admin-web",
  "version": "2.0.1",
  "private": true,
  "engines": {
    "node": ">=8.9.4 <10.15.0"
  },
  "scripts": {
    "start": "node server.js",
    "debug": "NODE_OPTIONS=--inspect ./node_modules/.bin/ts-node --inspect --no-lazy -r tsconfig-paths/register src/main/server.ts",
    "setup": "gulp sass copy-files",
    "lint": "tslint --project tsconfig.json --type-check && sass-lint -v -q",
    "test": "FEES_CLIENT_ID=feeid FEES_CLIENT_SECRET=feesecret DISABLE_AUTH=true mocha --timeout 10000 --require ts-node/register -r tsconfig-paths/register $(find src/test \\( -name '*.ts' -or -name '*.js' \\) ! -path '*a11y*' ! -path '*/routes/disabled/*') --reporter mochawesome --reporter-options reportFilename=unit,inlineAssets=true,reportTitle=fees-register-admin-web-unit",
    "test:coverage": "FEES_CLIENT_ID=feeid FEES_CLIENT_SECRET=feesecret DISABLE_AUTH=true LOG_LEVEL=OFF nyc mocha --compilers ts:ts-node/register -r tsconfig-paths/register --exit --timeout 8000 --opts mocha.opts $(find src/test \\( -name '*.ts' \\) ! -path '*a11y*')",
    "test:coverage-unit": "FEES_CLIENT_ID=feeid FEES_CLIENT_SECRET=feesecret DISABLE_AUTH=true NODE_ENV=mocha LOG_LEVEL=OFF nyc mocha --compilers ts:ts-node/register -r tsconfig-paths/register --opts mocha.opts $(find src/test \\( -name '*.ts' \\) ! -path '*a11y*' ! -path '*/routes/*')",
    "test:routes": "FEES_CLIENT_ID=feeid FEES_CLIENT_SECRET=feesecret DISABLE_AUTH=true mocha --compilers ts:ts-node/register -r tsconfig-paths/register $(find src/test \\( -name '*.ts' -or -name '*.js' \\) -path '*/routes/*') --reporter mochawesome --reporter-options reportFilename=routes,inlineAssets=true,reportTitle=fees-register-admin-web-routes",
    "test:a11y_old": "FEES_CLIENT_ID=feeid FEES_CLIENT_SECRET=feesecret DISABLE_AUTH=true mocha --compilers ts:ts-node/register -r tsconfig-paths/register src/test/a11y --timeout 60000 --reporter mochawesome --reporter-options reportFilename=a11y,inlineAssets=true,reportTitle=fees-register-admin-web-a11y",
    "test:a11y": "echo 'FIXME - test:a11y_old needs a fix - some randon test failures'",
    "test:nsp": "npm install nsp; nsp check",
    "test:codacy-upload": "cat ./coverage-report/lcov.info | codacy-coverage",
    "test:codecov-upload": "codecov -f ./coverage-report/lcov.info",
    "test:smoke": "echo 'TODO - test:smoke not implemented yet'",
    "test:functional": "echo 'TODO - test:functional not implemented yet'",
    "sonar-scan": "sonar-scanner -Dsonar.projectKey='fees-register-admin-web' -Dsonar.projectName='Fees-Register-Admin-Web' -Dsonar.sources=src/main -Dsonar.tests=src/test -Dsonar.exclusions=src/main/public/**,src/main/modules/**,src/main/app/idam/security.js -Dsonar.typescript.lcov.reportPaths=coverage-report/lcov.info",
    "precommit": "yarn lint",
    "prepush": "yarn test && yarn test:routes"
  },
