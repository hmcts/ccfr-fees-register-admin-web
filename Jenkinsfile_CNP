#!groovy

properties(
  [[$class: 'GithubProjectProperty', projectUrlStr: 'https://github.com/hmcts/ccfr-fees-register-admin-web.git'],
   pipelineTriggers([[$class: 'GitHubPushTrigger']])]
)

@Library("Infrastructure@hmctsdemo_aks")

def product = "fees-register"
def component = "frontend"

List<LinkedHashMap<String, Object>> secrets = [
    secret('freg-idam-client-secret', 'FEES_CLIENT_SECRET')
]
static LinkedHashMap<String, Object> secret(String secretName, String envVar) {
  [ $class: 'AzureKeyVaultSecret',
    secretType: 'Secret',
    name: secretName,
    version: '',
    envVariable: envVar
  ]
}

withPipeline("nodejs", product, component) {

  setVaultName('ccpay')
  loadVaultSecrets(secrets)
  enableDockerBuild()
  enableDeployToAKS()
  enableSlackNotifications('#cc-payments-tech')

  after('checkout') {
    sh "yarn cache clean"
    echo 'ccfr-fees-register-admin-web checked out'
  }
  after('build') {
    sh 'yarn setup'
  }

}
